<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#111a22"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
           android:contentDescription="Trinetra AI Logo"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Trinetra AI"
            android:textSize="24sp"
            android:textColor="#E7E9EB"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering law enforcement with cutting-edge AI for a safer tomorrow."
            android:textSize="14sp"
            android:textColor="#CCD2DB"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card: Proactive Policing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:backgroundTintMode="src_in"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="#AFC5D1"
            android:clipToPadding="false"
          >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock Proactive Policing"
                android:textSize="18sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trinetra AI transforms raw data into actionable intelligence, enabling you to anticipate and prevent crime. Identify emerging hotspots and understand criminal behavior with unparalleled accuracy."
                android:textSize="14sp"
                android:textColor="#374151" />
        </LinearLayout>

        <!-- Card: Operational Efficiency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:backgroundTint="#E5D6E9"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enhance Operational Efficiency"
                android:textSize="18sp"
                android:textColor="#3730A3"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Streamline your investigations and optimize resource allocation. Our advanced analytics provide deep insights into crime patterns, helping you make informed decisions and deploy personnel effectively."
                android:textSize="14sp"
                android:textColor="#374151" />
        </LinearLayout>


        <!-- Card: Key Benefits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#ECFDF5"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Benefits"
                android:textSize="18sp"
                android:textColor="#047857"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Optimize patrol routes with intelligent, data-driven suggestions.\n• Improve officer safety with real-time monitoring and alerts.\n• Strengthen community safety by identifying and addressing high-risk areas.\n• Make data-backed decisions to enhance public safety and trust."
                android:textSize="14sp"
                android:textColor="#374151" />
        </LinearLayout>

        <!-- CTA Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Trinetra AI"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:elevation="4dp"
            android:layout_marginTop="16dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2024 Trinetra AI. All rights reserved."
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
