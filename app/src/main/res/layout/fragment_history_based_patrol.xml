<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottom_fragments.HistoryBasedPatrol">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/accentSaffron"
                            android:text="Patrolling Route Map" />

                        <ImageView
                            android:id="@+id/iVExpandMapPatrolHistory"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/expand"
                            app:tint="@color/textPrimary" />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/surfaceLight"/>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapViewPreviewPatrolHistory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="0dp"
                    android:apiKey="YOUR_API_KEY_HERE" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Routes List"
                    android:textColor="@color/accentSaffron"
                    android:textStyle="bold"
                    android:textSize="18sp">
                </TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/surfaceLight"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surfaceLight"
                    app:cardCornerRadius="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#PR1"
                            android:textColor="@color/textSecondary"
                            android:textSize="15sp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karol Bagh -> Noida -> LaxmiNagar -> Karol Bagh"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp">
                        </TextView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surfaceLight"
                    app:cardCornerRadius="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#PR2"
                            android:textColor="@color/textSecondary"
                            android:textSize="15sp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saket -> Rohini -> Meerut -> Gurgaon"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp">
                        </TextView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewRoutesHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:text="View All Routes"
                    android:padding="8dp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary">

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</FrameLayout>