<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#111922"
    android:padding="16dp"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/netra1_heatmap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Crime Heatmap Banner" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:text="ðŸ”¥ Netra 1: Heatmap Intelligence"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerImage" />


    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_semibold"
        android:gravity="center"
        android:text="Visualize crime hotspots using FIR data and criminal sections across time, location, and category."
        android:textColor="#DADADA"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />


    <TextView
        android:id="@+id/keyFeaturesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="â€¢ Dynamic crime heatmaps from FIR and CCTNS\nâ€¢ Filter by time, type (e.g., theft, assault)\nâ€¢ Color-coded zones by intensity and frequency\nâ€¢ IPC-based categorization\nâ€¢ Crime density scaling for predictive analysis\nâ€¢ Seasonal, time-of-day map layers"
        android:textSize="15sp"
        android:textColor="#BBBBBB"
        android:fontFamily="@font/noto_sans_light"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />


    <TextView
        android:id="@+id/useCaseText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯ Use Case:\nHelps law enforcement deploy forces in high-crime areas through accurate visual crime representation."
        android:textSize="16sp"
        android:textColor="#9AA0A6"
        android:fontFamily="@font/space_grotesk_bold"
        app:layout_constraintTop_toBottomOf="@id/keyFeaturesText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/heatmap_nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/useCaseText"
        app:srcCompat="@drawable/ic_next"
        app:tint="@color/primary">

    </com.google.android.material.imageview.ShapeableImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
