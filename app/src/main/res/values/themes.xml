<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TrinetraAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item> <!-- deepIndigo -->
        <item name="colorPrimaryVariant">#1A237E</item> <!-- darker indigo -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surfaces -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Alert/danger/warning colors -->
        <item name="colorError">@color/alerts</item>
        <item name="colorOnError">@color/white</item>

        <!-- For buttons, inputs, etc. -->
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorAccent">@color/cyberBlue</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">#1A237E</item> <!-- darker indigo -->
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Optional Typography -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
    </style>

</resources>
