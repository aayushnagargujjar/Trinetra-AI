<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1E1E1E"/> <!-- Surface color -->
            <stroke android:width="2dp" android:color="#03DAC6"/> <!-- Primary border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default (not focused) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E1E1E"/> <!-- Surface color -->
            <stroke android:width="1dp" android:color="#A9A9A9"/> <!-- Secondary border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
